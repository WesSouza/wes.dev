---
import '../styles/global.css';
import BaseHeadMeta from './BaseHeadMeta.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string | undefined;
}

const { title, description, image } = Astro.props;
---

<BaseHeadMeta title={title} description={description} image={image} />

<link rel="icon" type="image/png" sizes="16x16" href="/images/Icon16.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/images/Icon32.png" />
<link rel="icon" type="image/png" sizes="256x256" href="/images/Icon256.png" />
<link rel="apple-touch-icon" href="/images/IconApple.png" />
